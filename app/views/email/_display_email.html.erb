<article class="my-5">
    <h3>Object : <%= @email.object %></h3>
    <p><%= @email.body %><p>
    <div class="btn-group mt-3">
        <%= link_to 'Supprimer', email_path(@email.id), method: :delete, class: 'btn btn-danger', remote: true %>
        <%= link_to 'Marquer comme non-lu', email_path(@email.id), method: :put, class: 'btn btn-secondary', remote: true %>
    </div>
</article>