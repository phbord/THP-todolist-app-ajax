<div class="container">
    <h1>Emails</h1>
    <div class="row my-5">
        <div class="col-12 mb-4">
            <nav>
                <ul class="">
                    <li class="">
                        <%= link_to 'recevoir un email', email_index_path, method: :post, class: 'btn btn-primary', remote: true %>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-4">
            <aside>
                <h2>Liste des emails</h2>
                <ul class="list-group" id="email-list">
                    <% @emails.each do |email|  %>
                        <li class="list-group-item">
                            <% title = email.email + " - Object : " + email.object %>
                            <%= link_to title, email_path(email.id), method: :get, remote: true %>
                        </li>
                    <% end %>
                </ul>
            </aside>
        </div>
        <div class="col-8">
            <article>
                <h2>Email sélectionné</h2>
                <div id="email-content"></div>
            </article>
        </div>
    </div>
</div>